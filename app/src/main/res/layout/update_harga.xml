<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="#86080808"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/tx_upd_market_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/market_size_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_weight="0"
            android:background="@color/line_color" />

        <ListView
            android:id="@+id/list_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upd_lihat_lengkap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/frame_button"
        android:text="@string/detail_price"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/button_size"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view_no_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_basket"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_shopping_basket_white_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_basket"
            android:layout_centerInParent="true"
            android:layout_marginTop="7dp"
            android:text="@string/no_data"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/button_size" />

    </RelativeLayout>

</FrameLayout>